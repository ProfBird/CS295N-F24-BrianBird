@model List<Review>
@{
    ViewData["Title"] = "Reviews Page";
}

<div class="text-center">
    <h1 class="display-4">Reviews on this Site</h1>
</div>
<h2>The Latest Review</h2>
@if (Model.Count != 0)
{
    foreach (Review review in Model)
    {
        <p>
            Title: @review.Book.Title<br />
            Author: @review.Book.Author<br />
            Reviewer: @review.Reviewer.Name<br />
            Review Date: @review.ReviewDate<br />
            Review: @review.ReviewText
        </p>
    }
}
else
{
    <p>There are no reviews.</p>
}
<a href="/Reviews/Review">Write a Review</a>